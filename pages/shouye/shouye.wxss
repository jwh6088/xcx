/* pages/shouye/shouye.wxss */
.topics{
  width: 100%;
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}

.topics image{
  width: 100rpx;
  height: 100rpx;
}
.topics navigator{
  width: 650rpx;
  margin-left: 10rpx;
  /* 强制文本在一行显示 */
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  line-height: 100rpx;
  color:#333;
}